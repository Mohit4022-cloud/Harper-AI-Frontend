# Database
DATABASE_URL="postgresql://user:password@localhost:5432/harperai"
DIRECT_URL="postgresql://user:password@localhost:5432/harperai"

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# API Keys
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SENTRY_DSN=

# WebSocket
WEBSOCKET_URL=http://localhost:3001

# Public Environment Variables
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,cdn.harperai.com,avatars.harperai.com

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_VOICE_CALLING=true
ENABLE_AI_COACHING=true
ENABLE_ADVANCED_ANALYTICS=true

# Performance
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE_MB=10
SESSION_TIMEOUT_HOURS=24

# Email
EMAIL_FROM=noreply@harperai.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Monitoring
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Development
ANALYZE=false