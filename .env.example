# Harper AI - Environment Configuration Template

# ==============================
# APPLICATION SETTINGS
# ==============================

# Base URL for the application (used for absolute URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL - CRITICAL for deployment
# Local Development: http://localhost:3000
# Render Production: https://harper-ai-frontend.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:3000

# Enable debug mode for development
NEXT_PUBLIC_DEBUG=true

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/harper_ai"

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_API_KEY=your-twilio-api-key
TWILIO_API_SECRET=your-twilio-api-secret
TWILIO_APP_SID=your-twilio-app-sid
NEXT_PUBLIC_TWILIO_DOMAIN=your-twilio-domain

# Eleven Labs Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-default-voice-id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@harperai.com

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=harper-ai-uploads

# Analytics & Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_CALLING=true
NEXT_PUBLIC_ENABLE_RECORDING=true
NEXT_PUBLIC_ENABLE_TRANSCRIPTION=true
NEXT_PUBLIC_ENABLE_AI_COACHING=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CSRF_SECRET=your-csrf-secret-here