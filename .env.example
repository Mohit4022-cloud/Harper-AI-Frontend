# Harper AI Frontend Environment Variables
# Copy this file to .env.local for local development
# Add these variables to your deployment platform (Render, Vercel, etc.)

# ======================
# Core Configuration
# ======================
NODE_ENV=production
NEXT_PUBLIC_APP_VERSION=1.1.0

# ======================
# API Configuration
# ======================
# The base URL for your deployed application
NEXT_PUBLIC_API_URL=https://your-app-url.onrender.com
NEXT_PUBLIC_WS_URL=wss://your-app-url.onrender.com

# ======================
# Database Configuration
# ======================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/database_name

# ======================
# Authentication & Security
# ======================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Logging
# ======================
LOG_LEVEL=info  # Options: trace, debug, info, warn, error, fatal

# ======================
# Twilio Configuration (Required for Calling Features)
# ======================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_CALLER_NUMBER=+1234567890  # Your Twilio phone number

# ======================
# ElevenLabs Configuration (Required for Voice Features)
# ======================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=your-elevenlabs-agent-id

# ======================
# Google Gemini AI Configuration (Required for AI Features)
# ======================
GEMINI_API_KEY=your-gemini-api-key

# ======================
# Sentry Error Tracking (Optional but Recommended)
# ======================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# ======================
# Feature Flags
# ======================
NEXT_PUBLIC_ENABLE_CALLING=true
NEXT_PUBLIC_ENABLE_RECORDING=true
NEXT_PUBLIC_ENABLE_TRANSCRIPTION=true
NEXT_PUBLIC_ENABLE_AI_COACHING=true
NEXT_PUBLIC_ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_AI_COACHING=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_CRM_SYNC=false

# ======================
# AWS Configuration (Optional - for S3 uploads)
# ======================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# ======================
# Redis Configuration (Optional - for caching)
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# Email Configuration (Optional - for email features)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Harper AI <noreply@harperai.com>

# ======================
# Development Only
# ======================
# These are only used in development
NEXT_PUBLIC_DEV_MODE=false
ANALYZE=false  # Set to true to analyze bundle size