# Environment Configuration Example
# Copy this file to .env.local and update with your values

# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/harper_ai

# JWT Configuration (REQUIRED - Generate a secure secret)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# API Keys (Optional - Required for specific features)
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_CALLER_NUMBER=

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_REAL_TIME_TRANSCRIPTION=false
ENABLE_AI_COACHING=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_CRM_SYNC=false

# Client-side Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# Client Feature Flags
NEXT_PUBLIC_ENABLE_CALLING=true
NEXT_PUBLIC_ENABLE_RECORDING=true
NEXT_PUBLIC_ENABLE_TRANSCRIPTION=true
NEXT_PUBLIC_ENABLE_AI_COACHING=true
NEXT_PUBLIC_ENABLE_REAL_TIME_TRANSCRIPTION=true