# Development Environment Variables
# Copy this to .env.local for local development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3002
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0-dev

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/harper_ai_dev
DIRECT_URL=postgresql://user:password@localhost:5432/harper_ai_dev

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Feature Flags
NEXT_PUBLIC_ENABLE_PPR=false
NEXT_PUBLIC_ENABLE_REACT_COMPILER=false
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Analytics & Monitoring (leave empty for dev)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_HOTJAR_ID=

# Performance
NEXT_PUBLIC_IMAGE_DOMAINS=localhost
NEXT_PUBLIC_CDN_URL=http://localhost:3000

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000

# Real-time Features
NEXT_PUBLIC_REALTIME_SYNC_INTERVAL=5000
NEXT_PUBLIC_OFFLINE_SYNC_ENABLED=true

# UI Configuration
NEXT_PUBLIC_VIRTUAL_TABLE_OVERSCAN=20
NEXT_PUBLIC_ANIMATION_REDUCED_MOTION=false